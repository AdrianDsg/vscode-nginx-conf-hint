{
	"name": "vscode-nginx-conf-hint",
	"displayName": "nginx.conf hint",
	"description": "nginx.conf syntax, hint and autocompletion",
	"version": "0.3.0",
	"license": "GPL-3.0",
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#E5FFEC",
		"theme": "light"
	},
	"categories": [
		"Snippets",
		"Programming Languages"
	],
	"keywords": [
		"NGINX",
		"nginx",
		"hint",
		"auto-completion",
		"configuration"
	],
	"publisher": "hangxingliu",
	"author": "hangxingliu",
	"main": "./src/extension/main.desktop.js",
	"browser": "./artifacts/web-ext/extension.js",
	"scripts": {
		"lint:eslint": "eslint . --ext .js,.ts",
		"build:desktop-ext": "tsc -p tsconfig.extension.json",
		"dev:web-ext": "webpack",
		"build:web-ext": "webpack --mode production --devtool hidden-source-map",
		"build:utils": "tsc -p tsconfig.utils.json",
		"build:syntax": "ts-node --project tsconfig.syntax.json ./src/syntax/generate-tmLanguage.ts",
		"clean": "rimraf 'src/extension/**/*.js' 'utils/**/*.js'"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"extensionDependencies": [],
	"dependencies": {},
	"devDependencies": {
		"@types/node": "^16.11.7",
		"@types/vscode": "*",
		"axios": "^0.24.0",
		"chalk": "^3.0.0",
		"cheerio": "1.0.0-rc.10",
		"html-minifier": "^4.0.0",
		"https-proxy-agent": "^5.0.0",
		"process": "^0.11.10",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.4.0",
		"typescript": "^4.4.4",
		"webpack": "^5.64.1",
		"webpack-cli": "^4.9.1"
	},
	"optionalDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"eslint": "^8.2.0"
	},
	"engines": {
		"vscode": "^1.1.0"
	},
	"activationEvents": [
		"onLanguage:NGINX",
		"onLanguage:lua"
	],
	"contributes": {
		"languages": [
			{
				"id": "NGINX",
				"aliases": [
					"NGINX"
				],
				"extensions": [
					".conf",
					"mime.types",
					"fastcgi_params",
					"scgi_params",
					"uwsgi_params"
				],
				"configuration": "./nginx.configuration.json"
			}
		],
		"snippets": [
			{
				"language": "NGINX",
				"path": "./hint_data/snippets.json"
			},
			{
				"language": "lua",
				"path": "./hint_data/lua/snippets.json"
			}
		],
		"grammars": [
			{
				"language": "NGINX",
				"scopeName": "source.nginx",
				"path": "./src/syntax/nginx.tmLanguage",
				"embeddedLanguages": {
					"meta.embedded.block.lua": "lua"
				}
			}
		],
		"commands": [
			{
				"command": "nginx-conf-hint.showDocument",
				"title": "Goto Nginx Document"
			}
		],
		"configuration": [
			{
				"title": "Nginx config file hint",
				"properties": {
					"nginx-conf-hint.enableStrictCompletion": {
						"type": "boolean",
						"default": true,
						"description": "only complete directives related to the block where cursor is located"
					},
					"nginx-conf-hint.format.align": {
						"type": "boolean",
						"default": false,
						"description": "Set whether to perform alignment formatting"
					}
				}
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "!inOutput && resourceLangId == 'NGINX'",
					"command": "nginx-conf-hint.showDocument",
					"group": "navigation"
				}
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hangxingliu/vscode-nginx-conf-hint"
	},
	"bugs": {
		"url": "https://github.com/hangxingliu/vscode-nginx-conf-hint/issues"
	},
	"homepage": "https://github.com/hangxingliu/vscode-nginx-conf-hint"
}
