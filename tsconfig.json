{
	"compilerOptions": {
		"outDir": "out",
		"module": "CommonJS",
		"declaration": false,
		"removeComments": false,
		"target": "ES2022",
		"sourceMap": true,
		"incremental": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": false
	},
	"include": [
		"src"
	],
	"exclude": [
		".tsc",
		"out",
		"node_modules"
	]
}
